<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TuckBox" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_secondary_variant
        </item>
        <!--        <item name="android:navigationBarColor" tools:targetApi="l">@color/color_secondary_variant-->
        <!--        </item>-->
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:background">@drawable/splash_background</item>
        <item name="android:statusBarColor" tools:targetApi="l">#00009688</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="MainBackground" parent="Theme.TuckBox">
        <item name="android:background">@color/color_secondary</item>
    </style>

    <style name="MainActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@color/color_secondary</item>
    </style>


    <style name="MainTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textColor">@color/white_override</item>
        <item name="boxStrokeColor">@color/white_override</item>
        <item name="hintTextColor">@color/color_on_primary</item>
        <item name="android:textColorHint">@color/color_on_primary</item>
        <item name="startIconTint">@color/color_on_primary</item>
        <item name="endIconTint">@color/color_on_primary</item>
        <item name="colorAccent">@color/white_override</item>
        <item name="colorPrimary">@color/white_override</item>
        <item name="colorControlActivated">@color/clear</item>
    </style>

    <style name="MainDropDownInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textColor">@color/white_override</item>
        <item name="boxStrokeColor">@color/white_override</item>
        <item name="hintTextColor">@color/color_on_primary</item>
        <item name="android:textColorHint">@color/color_on_primary</item>
        <item name="startIconTint">@color/color_on_primary</item>
        <item name="endIconTint">@color/color_on_primary</item>
        <item name="colorOnSurface">@color/clear</item>
        <item name="boxBackgroundColor">@null</item>
    </style>

    <style name="SubmitIconButton" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/SubmitIconColor</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="background">@id/rectangles</item>
    </style>

    <style name="SubmitIconColor">
        <item name="colorPrimary">@color/color_primary</item>
    </style>

    <style name="ResetIconButton" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ResetIconColor</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="background">@id/rectangles</item>
    </style>

    <style name="ResetIconColor">
        <item name="colorPrimary">@color/clear</item>
        <item name="colorAccent">@color/reset_button</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@color/color_secondary</item>
        <item name="itemBackground">@color/color_secondary_variant</item>
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
    </style>

    <style name="Picker" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/SubmitIconButton</item>
    </style>

    <style name="ColorIconOnlySmall" parent="Widget.MaterialComponents.Button.TextButton.Dialog.Flush">
        <item name="android:layout_margin">0dp</item>
        <item name="iconSize">@dimen/main_size_small</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">top</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:minWidth">@dimen/main_size_small</item>
        <item name="android:minHeight">@dimen/main_size_small</item>
    </style>

    <style name="MenuAddItem" parent="ColorIconOnlySmall">
        <item name="backgroundTint">@color/color_primary</item>
        <item name="iconTint">@color/white</item>
        <item name="shapeAppearanceOverlay">@style/BottomLeftRound</item>
    </style>

    <style name="BottomLeftRound" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
        <item name="cornerSizeTopLeft">50%</item>
    </style>
</resources>